<button type="button" class="btn btn-md btn-primary" data-toggle="modal" data-target="#new-cluster-dialog" title="Launch Spark cluster">
  <span class="glyphicon glyphicon-play" aria-hidden="true"></span> Launch
</button>
<div class="modal fade" id="new-cluster-dialog" tabindex="-1" role="dialog" aria-labelledby="new-cluster-dialog">
  <div class="modal-dialog" role="document">
    <form class="modal-content" action="{{ url('clusters-new') }}" method="POST" enctype="multipart/form-data">
      {% csrf_token %}
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Launch a Spark cluster</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label>Cluster identifier</label>
          <div class="control-group">
            {{ new_cluster_form.identifier }}
            <p class="help-block"></p>
          </div>
        </div>
        <div class="form-group">
          <label>Cluster size</label>
          <div class="control-group">
            {{ new_cluster_form.size }}
            <p class="help-block"></p>
          </div>
        </div>
        <div class="form-group">
          <label>SSH public key</label>
          <div class="control-group">
            {{ new_cluster_form.public_key }}
            <p class="help-block"></p>
          </div>
          <p class="help-block"></p>
        </div>
        <div class="alert alert-warning">Upload your SSH <strong>public key</strong>, not private key! This will generally be found in places like <code>~/.ssh/id_rsa.pub</code>.</div>
        <div class="form-group">
          <label>EMR release</label>
          <div class="control-group">
            {{ new_cluster_form.emr_release }}
            <p class="help-block"></p>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <input type="submit" class="btn btn-primary btn-lg" value="Launch" />
      </div>
    </form>
  </div>
</div>
