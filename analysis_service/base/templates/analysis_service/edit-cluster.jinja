<button type="button" class="btn btn-md" data-toggle="modal" data-target="#edit-cluster-dialog" title="Edit selected Spark cluster">
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
</button>
<div class="modal fade" id="edit-cluster-dialog" tabindex="-1" role="dialog" aria-labelledby="edit-cluster-dialog">
  <div class="modal-dialog" role="document">
    <form class="modal-content" action="/edit-cluster/" method="POST" enctype="multipart/form-data">
      {% csrf_token %}
      {{ edit_cluster_form.cluster }}
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Edit Spark cluster <span class="selected-cluster-name"></span></h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label>Cluster identifier</label>
          <div class="control-group">
            {{ edit_cluster_form.identifier }}
            <p class="help-block"></p>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <input type="submit" class="btn btn-primary btn-lg" value="Update" />
      </div>
    </form>
  </div>
</div>
